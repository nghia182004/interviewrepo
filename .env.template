
# Copy this file to .env and fill in your actual values
# Command: cp .env.template .env

# ==============================================
# MySQL Database Configuration
# ==============================================
# Root password for MySQL database

MYSQL_ROOT_PASSWORD=your_secure_password_here

# Database name to be created
MYSQL_DATABASE=studentmanagement

# ==============================================
# Backend Application Configuration
# ==============================================
# Database host (use 'db' for Docker, 'localhost' for local development)
DB_HOST=db

# Database port (default MySQL port)
DB_PORT=3306

# Database user (root or create a dedicated user)
DB_USER=root

# Database password (must match MYSQL_ROOT_PASSWORD)
DB_PASSWORD=your_secure_password_here

# Database name (must match MYSQL_DATABASE)
DB_NAME=studentmanagement

# Trusted domain
FRONTEND_URL=https://yourdomain.com

# ==============================================
# Application Configuration
# ==============================================
# Node environment (development, production, test)
NODE_ENV=production

# Application port
PORT=3500